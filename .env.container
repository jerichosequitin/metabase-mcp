# Luci-Metabase-MCP Container Environment Configuration
# Copy this to .env and configure with your actual values

# ============================================================================
# Metabase Connection Configuration
# ============================================================================

# Metabase instance URL (required)
METABASE_URL=https://metabase.example.com

# Option 1: API Key Authentication (recommended for production)
METABASE_API_KEY=your_api_key_here

# Option 2: Session Authentication (alternative)
# METABASE_USER_EMAIL=user@example.com
# METABASE_PASSWORD=your_password

# ============================================================================
# Server Configuration
# ============================================================================

# Node.js environment
NODE_ENV=production

# Logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Cache TTL in milliseconds (default: 10 minutes)
CACHE_TTL_MS=600000

# Request timeout in milliseconds (default: 10 minutes)
REQUEST_TIMEOUT_MS=600000

# ============================================================================
# Web3/Hedera Integration (Optional)
# ============================================================================

# Enable Web3 capabilities
WEB3_ENABLED=false

# Hedera network (mainnet, testnet, previewnet)
HEDERA_NETWORK=testnet

# Hedera operator credentials (required if WEB3_ENABLED=true)
# HEDERA_OPERATOR_ID=0.0.xxxxx
# HEDERA_OPERATOR_KEY=302e020100300506032b657004220420...

# ============================================================================
# Bridge Configuration
# ============================================================================

# Swift bridge settings
SWIFT_BRIDGE_HOST=::
SWIFT_BRIDGE_PORT=8001
SWIFT_NIO_THREADS=0

# Bridge protocol (websocket, http)
BRIDGE_PROTOCOL=websocket

# MCP server port
MCP_PORT=3000
