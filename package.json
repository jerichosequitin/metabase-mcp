{
  "name": "@jericho/metabase-mcp",
  "version": "0.2.0",
  "description": "A custom Model Context Protocol server for Metabase integration - Jericho's version",
  "private": true,
  "type": "module",
  "author": {
    "name": "Jericho Sequitin",
    "url": "https://github.com/jerichosequitin"
  },
  "bin": {
    "metabase-mcp": "./build/src/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run validate && tsc && npm test && node -e \"require('fs').chmodSync('build/src/index.js', '755')\" && mkdir -p dist && cp -r build/* dist/",
    "build:clean": "rm -rf build dist && npm run build",
    "build:fast": "tsc && node -e \"require('fs').chmodSync('build/src/index.js', '755')\" && mkdir -p dist && cp -r build/* dist/",
    "prepare": "npm run build:fast && husky install",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/src/index.js",
    "start": "node build/src/index.js",
    "dev": "tsc && node build/src/index.js",
    "dev:watch": "npm run build && concurrently \"tsc --watch\" \"nodemon --delay 2 build/src/index.js\"",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "./scripts/test-all.sh",
    "clean": "rm -rf build dist node_modules/.cache"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "@types/xlsx": "^0.0.35",
    "dotenv": "^16.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "metabase",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "custom",
    "jericho"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
